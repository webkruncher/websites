

<root>
	<domain 
		name="webkruncher.com"
		path="/home/jmt/websites/text/webkruncher/"
	>
		<filter
			hostname="webkruncher.com"
		>
			<site
				protocol="http"
				port="80"
			/>

			<site
				protocol="https"
				port="443"
				passwordfile="/etc/webkruncher.pwd"
				certfile="/home/jmt/websites/certs/webkruncher/WEBKRUNCHER.COM.crt"
				keyfile="/home/jmt/websites/certs/webkruncher/server.key"
			>
			</site>
		</filter>	
	</domain>

